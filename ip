<body>

    <h1>Minehant - Creează Server</h1>
    <p>Apasă butonul pentru a primi un IP de server!</p>

    <button onclick="genereazaIP()">Creează server</button>

    <div id="ipBox"></div>

    <script>
        function genereazaIP() {
            const prefixe = ["mc", "sv", "play", "node", "srv"];
            const randomPrefix = prefixe[Math.floor(Math.random() * prefixe.length)];
            const randomNum = Math.floor(Math.random() * 900) + 100; // 100-999
            const domeniu = "minehant.net";
            const porturi = [25565, 19132, 25575];
            const randomPort = porturi[Math.floor(Math.random() * porturi.length)];

            const ip = `${randomPrefix}${randomNum}.${domeniu}:${randomPort}`;
            document.getElementById("ipBox").innerHTML = `IP-ul tău: <b>${ip}</b>`;
        }
    </script>

