  <!-- Modal -->
  <div class="modal-backdrop" id="modal">
    <div class="modal" role="dialog" aria-modal="true" aria-labelledby="modalTitle">
      <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:8px">
        <h3 id="modalTitle">Comandă plan</h3>
        <button class="close-btn" id="closeModal">✕ Închide</button>
      </div>
      <form id="orderForm">
        <div class="form-row">
          <div class="col"><input type="text" id="fullName" placeholder="Nume complet" required></div>
          <div class="col"><input type="email" id="email" placeholder="Email" required></div>
        </div>
        <div style="margin-bottom:10px">
          <label for="planSelect" class="small">Plan selectat</label>
          <select id="planSelect"></select>
        </div>
        <div style="margin-bottom:10px">
          <label class="small">Mesaj (opțional)</label>
          <textarea id="message" placeholder="Detalii (ex: numele serverului, preferințe pluginuri)"></textarea>
        </div>
        <div style="display:flex;gap:8px;align-items:center">
          <button type="submit" class="btn">Trimite comandă</button>
          <button type="button" class="btn ghost" id="clearForm">Curăță</button>
        </div>
        <div id="formResult" style="margin-top:12px"></div>
      </form>
    </div>
  </div>

  <script>
    // generate plans 1..12
    const plansGrid = document.getElementById('plansGrid');
    const planSelect = document.getElementById('planSelect');
    const modal = document.getElementById('modal');
    const closeModal = document.getElementById('closeModal');
    const orderForm = document.getElementById('orderForm');
    const formResult = document.getElementById('formResult');
    const demoSignup = document.getElementById('demoSignup');
    const clearFormBtn = document.getElementById('clearForm');

    function createPlanCard(ram){
      const storage = ram * 10; // GB
      const slots = ram * 4;
      const div = document.createElement('div');
      div.className = 'plan';
      div.innerHTML = `
        <div class="badge">FREE</div>
        <h3>Plan ${ram} GB</h3>
        <div class="price">0€ / lună</div>
        <div class="specs">${ram} GB RAM • ${storage} GB stocare • ${slots} sloturi</div>
        <button class="btn ghost" data-plan="${ram}">Comandă</button>
      `;
      const btn = div.querySelector('button');
      btn.addEventListener('click', ()=>openModal(ram));
      return div;
    }

    function openModal(ram){
      modal.style.display='flex';
      // populate select and preselect
      planSelect.innerHTML = '';
      for(let r=1;r<=12;r++){
        const opt = document.createElement('option');
        opt.value = r;
        opt.textContent = `Plan ${r} GB — ${r*10} GB stocare • ${r*4} sloturi`;
        if(r===ram) opt.selected = true;
        planSelect.appendChild(opt);
      }
      document.getElementById('fullName').focus();
    }

    function closeModalFn(){
      modal.style.display='none';
      formResult.innerHTML = '';
      orderForm.reset();
    }

    // initialize grid
    for(let i=1;i<=12;i++){
      plansGrid.appendChild(createPlanCard(i));
    }

    // modal events
    closeModal.addEventListener('click', closeModalFn);
    window.addEventListener('click', (e)=>{ if(e.target===modal) closeModalFn(); });
    demoSignup.addEventListener('click', (e)=>{ e.preventDefault(); openModal(1); });

    clearFormBtn.addEventListener('click', ()=> orderForm.reset());

    orderForm.addEventListener('submit', function(e){
      e.preventDefault();
      const name = document.getElementById('fullName').value.trim();
      const email = document.getElementById('email').value.trim();
      const plan = planSelect.value;
      const message = document.getElementById('message').value.trim();
      if(!name||!email){ formResult.innerHTML = '<div class="success">Completează nume și email.</div>'; return; }

      // build email body
      const subj = encodeURIComponent(`Comandă Minehant - Plan ${plan} GB`);
      const bodyLines = [
        `Nume: ${name}`,
        `Email: ${email}`,
        `Plan dorit: ${plan} GB`,
        `Stocare: ${plan*10} GB`,
        `Sloturi: ${plan*4}`,
        `Mesaj: ${message||'(niciun mesaj)'}`
      ];
      const body = encodeURIComponent(bodyLines.join('\n'));

      // open mail client
      const mailto = `mailto:contact@minehant.example?subject=${subj}&body=${body}`;
      window.location.href = mailto;

      // show confirmation on page (in caz că user nu trimite)
      formResult.innerHTML = '<div class="success">S-a generat solicitarea. Clientul tău de email s-a deschis. Dacă nu, copiază datele și trimite manual.</div>';
    });
  </script>
</body>
